<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <beans>
        <context:component-scan base-package="com.paranora.**"></context:component-scan>
        <context:property-placeholder location="classpath:/application.properties"/>

        <bean id="springUtils" class="com.paranora.trist.SpringUtils" lazy-init="false"/>
        <bean id="springContextHolder" class="com.paranora.trist.SpringContextHolder" lazy-init="false"/>
    </beans>

</beans>